{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "target": "ESNext",
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*.ts",
    "environment.d.ts",
    "express.d.ts"
  ]
}